<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--parent="Theme.MaterialComponents.DayNight.DarkActionBar"-->
    <style name="Skripsi" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Android Lint-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Keyboard Hidden-->
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!-- expenseDateTimePicker-->
        <item name="android:datePickerDialogTheme">@style/expenseDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/expenseTimePickerDialogTheme</item>
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/cyan_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Color MaterialDesign-->
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
    </style>

    <style name="expenseDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <!-- button color -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:datePickerStyle">@style/expenseDatePickerStyle</item>
        <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- header year color -->
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>

    <style name="expenseTimePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <!-- button color -->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="expenseDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <!-- header background color -->
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>
</resources>